<div class="page-header"><h1>Posts</h1></div>

<% @posts.each do |post|%>
  <div class="well well-sm"></div>
  <h2><%= post.content %></h2>
  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info'%>
  <%= link_to 'Delete', post_path(post), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
<%end%>
