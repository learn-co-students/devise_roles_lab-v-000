<h3>User</h3>
Name: <%= @user.name %><br>
Email: <%= @user.email %><br>

<% if @user.posts.any? %>
  <h2>Posts</h2>
  <% @user.posts.each do |post| %>
    <div>
      <%= post.content %>
      <% if @user == current_user || current_user.vip? || current_user.admin? %>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if @user == current_user %>
  <%= form_for :post, url: posts_path do |post| %>
    Content: <%= post.text_field :content %><br>
    <%= post.submit %>
  <% end %>
<% end %>
