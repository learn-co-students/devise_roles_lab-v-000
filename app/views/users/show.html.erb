<h1>Hi, <%= @user.name %></h1>
<h2>Email: <%= @user.email %></h2>

<% if @user.posts.any? %>
  <h3>Posts</h3>
  <% @user.posts.each do |post| %>
    <p>
      <%= post.content %>
      <% if post.user.id == current_user.id %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post_path(post), method: :delete %>
      <% end %>
    </p>
  <% end %>
<% end %>

<%= form_for(Post.new) do |f| %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
