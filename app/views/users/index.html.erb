<h2>Users</h2>
<% @users.each do |user| %>
  <%= link_to user.email, user %>

  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
    <%= f.submit 'Change Role', :class => 'button-xs' %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to "Delete", user_path(user), method: :delete %> <br>
  <% end %>

<% end %>
